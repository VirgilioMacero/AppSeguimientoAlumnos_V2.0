<Window x:Class="SeguimientoAlumnos.VistaProfesor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeguimientoAlumnos"
        mc:Ignorable="d"
        Title="VistaProfesor" Height="504.235" Width="1084.365">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="716">
            <TabItem Header="Ramos">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="LstRamosDados" HorizontalAlignment="Left" Height="351" Margin="24,10,0,0" VerticalAlignment="Top" Width="244" ItemsSource="{Binding ListaRamos}" FocusableChanged="LstRamosDados_FocusableChanged" GotFocus="LstRamosDados_GotFocus" SelectedItem="{Binding RamoSeleccionado}">
                        <ListView.View>
                            <GridView AllowsColumnReorder="true"
              ColumnHeaderToolTip="Ramo" >
                                <GridViewColumn Header="Nombre" 
                            DisplayMemberBinding="{Binding Nombre}" Width="90"/>
                                <GridViewColumn Header="Codigo" 
                            DisplayMemberBinding="{Binding Codigo}" Width="70"/>
                                <GridViewColumn Header="Seccion" 
                            DisplayMemberBinding="{Binding Seccion}" Width="50"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView x:Name="LstAlumnosInscritos" HorizontalAlignment="Left" Height="351" Margin="273,10,0,0" VerticalAlignment="Top" Width="187" ItemsSource="{Binding ListaAlumnos}">
                        <ListView.View>
                            <GridView AllowsColumnReorder="true"
                                ColumnHeaderToolTip="Ramo" >
                                <GridViewColumn Header="Nombre" 
                                    DisplayMemberBinding="{Binding Nombre}" Width="80"/>
                                <GridViewColumn Header="RUT" 
                                    DisplayMemberBinding="{Binding RUTAlumno}" Width="80"/>

                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListBox x:Name="LstBoxRamos" HorizontalAlignment="Left" Height="351" Margin="465,10,0,0" VerticalAlignment="Top" Width="206"/>
                </Grid>
            </TabItem>
            <TabItem Header="Ayuda">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <TabControl HorizontalAlignment="Left" Height="399" Margin="731,10,0,0" VerticalAlignment="Top" Width="335">
            <TabItem Header="Notificaciones">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
